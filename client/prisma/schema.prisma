generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Table {
  id           Int      @id @default(autoincrement())
  number       Int      @unique
  capacity     Int
  status       String   @default("available") // available, reserved, occupied
  x            Float    // X koordinata na planu
  y            Float    // Y koordinata na planu
  shape        String   @default("rectangle") // rectangle, circle, square
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  reservations Reservation[]

  @@map("tables")
}

model Reservation {
  id            Int      @id @default(autoincrement())
  tableId       Int?
  date          DateTime
  time          String
  duration      Int      @default(120) // trajanje u minutama
  numberOfGuests Int
  customerName  String
  customerPhone String
  customerEmail String?
  status        String   @default("pending")
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  table         Table?   @relation(fields: [tableId], references: [id])

  @@map("reservations")
}
